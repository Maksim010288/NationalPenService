<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="02" author="Maks Baziuk">
        <createTable tableName="national_pen">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKeyName="id_nation_pen"/>
            </column>
            <column name="machine_name" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="machine_id" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="view_order" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="materials" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
            <column name="quantity" type="integer">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>